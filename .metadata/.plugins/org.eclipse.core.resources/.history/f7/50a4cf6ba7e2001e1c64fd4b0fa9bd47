package com.shinhan.day04;

public class Person {
	int numberOfPerson;
	int age;
	String name;
	
	public Person(int age, String name) {
		this.age = age;
		this.name = name;
		numberOfPerson++;
	}
	Person(){ //나이 12살, 이름 Anonymous로 초기화
		this(12,"Anonymous");
		//age=12;
		//name="Anonymous";
		
	}

	void selfIntorduce(){
		System.out.printf("내 이름은 %d이며, 나이는 %d살 입니다.",name, age);
	}
	int getPopulation(){
		return numberOfPerson;
	}
}
